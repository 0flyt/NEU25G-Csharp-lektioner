<UserControl x:Class="L043_Panelss.Controls.ExampleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:L043_Panelss.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Canvas Grid.Column="1" Grid.Row="1">
        <Button Content="Hello" Canvas.Left="100" Canvas.Top="50" />
        <Rectangle
            Width="50"
            Height="80"
            Fill="Red"
            Stroke="Black"
            StrokeThickness="5"
            Canvas.Top="10"
            Canvas.Left="20"
        />
        <Ellipse
            Width="50"
            Height="40"
            Fill="Purple"
            Stroke="Black"
            StrokeThickness="5"
            Canvas.Bottom="10"
            Canvas.Right="20"
        />
    </Canvas>
</UserControl>
