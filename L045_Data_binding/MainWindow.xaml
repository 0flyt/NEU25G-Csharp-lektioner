<Window x:Class="L045_Data_binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L045_Data_binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <!--<StackPanel>
        <TextBox
            x:Name="textBoxA"
            Margin="10 10 10 0"
            Text="{Binding ElementName=textBoxB, Path=Text, Mode=Default, UpdateSourceTrigger=PropertyChanged}"
        />
        <TextBox x:Name="textBoxB" Margin="10 10 10 0" />
    </StackPanel>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions> 
        <StackPanel>
            <!--<StackPanel.DataContext>
                <local:Person FirstName="Johan" LastName="Karlsson" Age="25" />
            </StackPanel.DataContext>-->
            <TextBox
                x:Name="textBoxA"
                Margin="10 10 10 0"
                Text="{Binding Path=FirstName}"
            />
            <TextBox
                x:Name="textBoxB"
                Margin="10 10 10 0"
                Text="{Binding Path=LastName}"
            />
            <Button Content="Click me" Click="Button_Click" Margin="10 10 10 0" />
        </StackPanel>

        <ListBox
            Grid.Row="1"
            Margin="10"
            ItemsSource="{Binding Path=Children}"
            DisplayMemberPath="FirstName"
        />
    </Grid>
</Window>
