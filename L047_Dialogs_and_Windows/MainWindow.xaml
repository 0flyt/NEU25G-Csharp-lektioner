<Window x:Class="L047_Dialogs_and_Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L047_Dialogs_and_Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="400" FontSize="24">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Vertical">
            <Button
                Content="Show me MessageBox"
                Margin="10 10 10 0"
                Click="ShowMessageBoxButton_Click"
                />
            <Button
                x:Name="AddCharacterButton"
                Content="Add character?"
                Margin="10 10 10 0"
                Click="AddCharacterButton_Click"
            />
            <Button
                 x:Name="DisabledButton"
                 Content="Disable"
                 Margin="10 10 10 0"
                 Click="DisabledButton_Click"
             />
            <Button
                 x:Name="OpenFileDialogButton"
                 Content="Open file."
                 Margin="10 10 10 0"
                 Click="OpenFileDialogButton_Click"
             />
            <Button
                 x:Name="SaveFileDialogButton"
                 Content="Save file."
                 Margin="10 10 10 0"
                 Click="SaveFileDialogButton_Click"
             />
            <Button
                 x:Name="AddUserDialogButton"
                 Content="Add new user"
                 Margin="10 10 10 0"
                 Click="AddUserDialogButton_Click"
             />
        </StackPanel>

        <ListBox Grid.Row="1" Margin="10" ItemsSource="{Binding Users}" DisplayMemberPath="FirstName" />

    </Grid>
    
</Window>
