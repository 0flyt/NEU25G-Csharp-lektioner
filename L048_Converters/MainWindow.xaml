<Window x:Class="L048_Converters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L048_Converters"
        xmlns:converters="clr-namespace:L048_Converters.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="400">
    <StackPanel>
        <StackPanel.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:DoubleToSolidColorBrushConverter x:Key="DoubleToSolidColorBrushConverter" />
        </StackPanel.Resources>
        <Button
            Content="{Binding ElementName=MySlider, Path=Value}"
            Background="{Binding ElementName=MySlider, Path=Value, Converter={StaticResource DoubleToSolidColorBrushConverter}}"
            Margin="10 10 10 0"
            Width="{Binding ElementName=MySlider, Path=Value}"
            Visibility="{Binding ElementName=ShowButtonCheckBox, Path=IsChecked, Converter={StaticResource BoolToVisibility}}"
        />
        <CheckBox
            x:Name="ShowButtonCheckBox"
            Content="Show button"
            Margin="10 10 10 0"
        />
        <Slider
            Minimum="0"
            Maximum="255"
            x:Name="MySlider"
            TickFrequency="1"
            IsSnapToTickEnabled="True"
            Margin="10 10 10 0"
        />
    </StackPanel>
</Window>
