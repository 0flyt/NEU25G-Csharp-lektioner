<Page x:Class="Ovn011_XAML.Tasks.WPF.Task11"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ovn011_XAML.Tasks.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task11">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="CounterLabel" HorizontalAlignment="Center" />
            <Slider
                x:Name="CounterSlider"
                Minimum="0"
                Maximum="9"
                IsSnapToTickEnabled="True"
                TickFrequency="1"
                ValueChanged="CounterSlider_ValueChanged"
            />
            <StackPanel Orientation="Horizontal">
                <Button 
             Content="Increase"
             Click="Button_Click_Increase"
             Padding="4 0"
             x:Name="IncreaseButton"
         />
                <Button
             Content="Decrease"
             Click="Button_Click_Decrease"
             Padding="4 0"
             Margin="10 0 0 0"
             x:Name="DecreaseButton"
         />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
